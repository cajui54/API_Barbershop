{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": ["db.json"]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "index.js"
        }
    ],
    "functions": {
        "index.js": {
          "memory": 1024,
          "includeFiles": "db.json"
        }
      },
      "rewrites": [
        {
          "source": "/(.*)",
          "destination": "index.js"
        }
      ]
}